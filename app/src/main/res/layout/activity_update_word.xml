<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateWordActivity">

    <EditText
        android:id="@+id/up_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:hint="id"
        android:textSize="18sp"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:inputType="number"
        android:enabled="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="Autofill,HardcodedText,LabelFor,TextFields" />

    <EditText
        android:id="@+id/up_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="단어를 입력하세요."
        android:textSize="18sp"
        android:layout_margin="15dp"
        android:inputType="textAutoComplete"
        app:layout_constraintTop_toBottomOf="@+id/up_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="Autofill,HardcodedText,LabelFor,TextFields"/>

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="수정하기"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:layout_margin="15dp"
        android:background="#617AF4"
        app:layout_constraintTop_toBottomOf="@+id/up_word"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText,SpUsage" />

</androidx.constraintlayout.widget.ConstraintLayout>